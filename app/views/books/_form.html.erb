<%= form_for @book do |f| %>
  <div class="input-field">
    <%= f.text_field :title, autofocus: true, :class => "validate", :placeholder => "Title" %>
  </div>

  <div class="input-field">
    <%= f.text_field :author, :class => "validate", :placeholder => "Author" %>
  </div>

  <div class="input-field">
    <%= f.text_field :description, :class => "validate", :placeholder => "Description" %>
  </div>

  <button class="btn waves-effect waves-light" type="submit" name="action">Add Your Review</button>
<% end %>
